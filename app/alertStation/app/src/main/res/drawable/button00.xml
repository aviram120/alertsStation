<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:bottom="0px">
                <shape>
                    <corners
                        android:radius="0dp"
                        />
                    <solid
                        android:color="#FFFFFF"
                        />
                    <size
                        android:width="0dp"
                        android:height="00dp"
                        />
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"
                        />
                    <stroke
                        android:width="0dp"
                        android:color="#029ed7"
                        />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="0px">
                <shape>
                    <corners
                        android:radius="2dp"
                        />
                    <solid
                        android:color="#FFFFFF"
                        />
                    <stroke
                        android:width="2dp"
                        android:color="#029ed7"
                        />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>




